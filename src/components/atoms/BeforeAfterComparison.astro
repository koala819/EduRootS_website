---
import { Icon } from "astro-icon/components";

const beforeEduXcoM = [
  "Un fichier Excel par classe",
  "Des appels à 22h pour retrouver un élève absent",
  "Des infos perdues entre WhatsApp, mails, SMS",
];

const afterEduXcoM = [
  "Tout est centralisé, visible, fluide",
  "Suivi des absences, notes, devoirs en 1 clic",
  "Communication instantanée entre équipe et familles",
];
---

<section class="w-full px-4 py-12 sm:px-6 lg:px-8">
  <div class="mx-auto">
    <h2 class="mb-12 text-center text-3xl font-bold">
      Ce que vivent les écoles AVANT / APRÈS EduXcoM
    </h2>

    <!-- Version desktop: colonnes côte à côte -->
    <div class="mb-8 lg:mb-0 lg:grid lg:grid-cols-2 lg:gap-8">
      <!-- AVANT -->
      <div class="mb-8 rounded-lg bg-gray-100 p-8 lg:mb-0">
        <h3 class="mb-4 font-bold text-red-600 lg:mb-6">Avant EduXcoM :</h3>
        <ul class="space-y-3 lg:space-y-4">
          {
            beforeEduXcoM.map(feature => (
              <li class="flex items-center py-8">
                <Icon
                  name="x-circle"
                  class="mr-3 h-5 w-5 flex-shrink-0 text-red-500 lg:h-6 lg:w-6"
                />
                <span>{feature}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- APRÈS -->
      <div class="rounded-lg bg-green-50 p-8">
        <h3 class="mb-4 text-xl font-bold text-green-600 lg:mb-6 lg:text-2xl">
          Avec EduXcoM :
        </h3>
        <ul class="space-y-3 lg:space-y-4">
          {
            afterEduXcoM.map(feature => (
              <li class="flex items-center py-8">
                <Icon
                  name="check-circle"
                  class="mr-3 h-5 w-5 flex-shrink-0 text-green-500"
                />
                <span class="text-lg">{feature}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
