---
import { Icon } from "astro-icon/components";

const beforeEduXcoM = [
  "Un fichier Excel par classe",
  "Des appels à 22h pour retrouver un élève absent",
  "Des infos perdues entre WhatsApp, mails, SMS",
];

const afterEduXcoM = [
  "Tout est centralisé, visible, fluide",
  "Suivi des absences, notes, devoirs en 1 clic",
  "Communication instantanée entre équipe et familles",
];
---

<section class="w-full px-4 py-12 sm:px-6 lg:px-8">
  <div class="mx-auto">
    <h2 class="mb-12 text-center">
      Ce que vivent les écoles AVANT / APRÈS EduXcoM
    </h2>

    <!-- Version desktop: colonnes côte à côte -->
    <div class="mb-8 lg:mb-0 lg:grid lg:grid-cols-2 lg:gap-8">
      <!-- AVANT -->
      <div
        class="bg-light-dark/25 dark:bg-dark-background mb-8 rounded-lg p-8 text-center lg:mb-0"
      >
        <h3 class="!text-error dark:!text-error-dark mb-4 font-bold lg:mb-6">
          Avant EduXcoM :
        </h3>
        <ul class="space-y-3 lg:space-y-4">
          {
            beforeEduXcoM.map(feature => (
              <li class="flex items-center py-8">
                <Icon
                  name="x-circle"
                  class="!text-error dark:!text-error-dark mr-3 h-5 w-5 flex-shrink-0 lg:h-6 lg:w-6"
                />
                <span>{feature}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- APRÈS -->
      <div class="dark:bg-success/30 bg-success-dark/5 rounded-lg p-8">
        <h3
          class="!text-success dark:!text-success-dark mb-4 text-center lg:mb-6"
        >
          Avec EduXcoM :
        </h3>
        <ul class="space-y-3 lg:space-y-4">
          {
            afterEduXcoM.map(feature => (
              <li class="flex items-center py-8">
                <Icon
                  name="check-circle"
                  class="!text-success dark:!text-success-dark mr-3 h-5 w-5 flex-shrink-0"
                />
                <span class="text-lg">{feature}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
