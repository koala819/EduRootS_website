---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="bg-primary/10 dark:bg-primary-dark/20 absolute inset-0 flex items-center justify-center rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100"
>
  <div
    class="dark:bg-dark/90 text-primary dark:text-primary-dark flex translate-y-4 items-center rounded-lg bg-white/90 px-4 py-2 text-sm font-medium transition-transform duration-300 group-hover:translate-y-0"
  >
    <Icon name="zoom-in" class="text-2xl" />
    {title}
  </div>
</div>
