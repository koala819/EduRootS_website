---
import AnimatedSection from "@/components/atoms/AnimatedSection.astro";
import { Image } from "astro:assets";
import interfaceParentsMobile from "@/assets/pictures/eduroots-tableau-bord-famille-mobile.webp";
---

<article
  class="mx-auto grid w-full grid-cols-1 gap-8 py-8 md:grid-cols-2 md:gap-12 lg:py-12"
>
  <!-- Contenu textuel -->
  <aside class="order-1 flex flex-col justify-center px-4">
    <AnimatedSection direction="right" delay={0.1}>
      <h2>Pour les familles</h2>
      <p>
        Tout le suivi scolaire de vos enfants, accessible en temps réel depuis
        votre téléphone.
      </p>
    </AnimatedSection>
  </aside>

  <!-- Image -->
  <aside class="order-2 flex items-center justify-center px-4 md:px-0">
    <div class="mx-auto w-full max-w-xs">
      <Image
        src={interfaceParentsMobile}
        alt="Application mobile Eduroots pour le suivi scolaire par les parents"
        widths={[200, 400, 600]}
        sizes="(max-width: 767px) 80vw, 300px"
        quality={75}
        format="webp"
        loading="lazy"
        class="h-auto w-full rounded-lg object-contain transition-all duration-300 hover:scale-[1.02] hover:drop-shadow-xl"
      />
    </div>
  </aside>
</article>
