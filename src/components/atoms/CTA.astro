---
import { Image } from "astro:assets";

interface Props {
  title: string;
  btn: string;
  appel: string;
  imageUrl: any;
  alt: string;
}

const { btn, appel, title, imageUrl, alt } = Astro.props;
---

<section
  class="bg-light-dark dark:bg-dark-background relative w-full overflow-hidden rounded-xl shadow-md"
>
  <div class="flex flex-col-reverse items-center lg:flex-row">
    <!-- Texte -->
    <div
      class="flex w-full flex-col justify-center px-6 py-8 text-center lg:w-1/2 lg:px-12 lg:text-left"
    >
      <h2 class="mb-4 text-2xl font-bold sm:text-3xl">{title}</h2>

      <a
        href="#demo"
        class="btn-primary mt-2 inline-flex items-center justify-center gap-2"
      >
        <span class="!text-light dark:!text-dark">{btn}</span>
        <div class="mr-4 sm:mr-0">
          <svg
            class="h-5 w-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </div>
      </a>
      <p class="mb-6">{appel}</p>
    </div>

    <!-- Image -->
    <div
      class="relative aspect-[4/3] w-full sm:aspect-[16/9] lg:aspect-auto lg:w-1/2"
    >
      <Image
        src={imageUrl}
        alt={alt}
        width={1600}
        height={1200}
        sizes="(max-width: 768px) 100vw, 50vw"
        class="h-full w-full object-cover object-left-top lg:rounded-r-xl"
        loading="lazy"
      />
    </div>
  </div>
</section>
