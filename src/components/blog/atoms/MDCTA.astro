---
interface Props {
  title: string;
  btnTxt: string;
}
const { btnTxt, title } = Astro.props;
---

<div class="flex flex-col">
  <p class="mb-4 text-xl !font-bold">{title}</p>
  <!-- <p class="mb-4 text-xl !font-bold"></p> -->
  <div class="flex items-center justify-center">
    <a
      href={"/#demo"}
      class="btn-primary flex items-center gap-4 !text-xs lg:p-2 lg:!text-xl"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
      {btnTxt}
    </a>
  </div>
</div>
