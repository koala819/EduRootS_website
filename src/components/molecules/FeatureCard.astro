---
import CardIcon from '@/components/atoms/FeaturesCardIcon.astro';

interface Props {
  iconName: string;
  title: string;
  descriptif: string;
}

const { iconName, title, descriptif } = Astro.props;
---

<div
    class="bg-white dark:bg-dark-background p-6 rounded-xl shadow-md transition-transform duration-300 hover:-translate-y-2 relative overflow-hidden"
  >
    <CardIcon iconName={iconName} />
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-dark-light dark:text-dark-lighter">{descriptif}</p>
  </div>