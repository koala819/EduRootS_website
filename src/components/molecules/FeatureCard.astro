---
import CardIcon from "@/components/atoms/FeaturesCardIcon.astro";

interface Props {
  iconName: string;
  title: string;
  descriptif: string;
}

const { iconName, title, descriptif } = Astro.props;
---

<div
  class="dark:bg-dark-background mx-auto w-full max-w-md rounded-xl bg-white shadow-md transition-transform duration-300 hover:-translate-y-2"
>
  <figure class="p-2">
    <CardIcon iconName={iconName} />
    <h2 class="break-words">{title}</h2>
  </figure>

  <p class="p-6">{descriptif}</p>
</div>
