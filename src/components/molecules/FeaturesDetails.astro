---
import FeaturesDetailsArticle from "@/components/atoms/FeaturesDetailsArticle.astro";

import interfaceEnseignantDesktop from "@/assets/pictures/eduxcom-tableau-bord-enseignant-desktop.webp";
import interfaceParentsMobile from "@/assets/pictures/eduxcom-tableau-bord-famille-mobile.webp";
import interfaceAdminTablet from "@/assets/pictures/eduxcom-tableau-bord-administratif-tablet.webp";

const teacherFeatures = [
  {
    text: "Gestion des cahiers de notes et calculs automatiques des moyennes pondérées pour chaque élève",
    strongParts: ["cahiers de notes"],
  },
  {
    text: "Planification des devoirs et évaluations avec rappels automatiques",
    strongParts: ["devoirs et évaluations"],
  },
  {
    text: "Suivi des absences et gestion des retards avec alertes immédiates aux parents et à l'administration",
    strongParts: ["Suivi des absences"],
  },
  {
    text: "Messagerie sécurisée pour une communication fluide avec les familles et l'équipe pédagogique",
    strongParts: ["communication fluide"],
  },
];

const parentFeatures = [
  {
    text: "Consultez les notes et évaluations de votre enfant dès leur publication par les enseignants",
    strongParts: ["notes et évaluations"],
  },
  {
    text: "Suivez les devoirs et examens pour aider votre enfant à s'organiser",
    strongParts: ["devoirs et examens"],
  },
  {
    text: "Recevez des notifications en temps réel concernant les absences, retards ou informations importantes",
    strongParts: ["notifications en temps réel"],
  },
  {
    text: "Communiquez directement avec les enseignants et l'administration via notre messagerie intégrée",
    strongParts: ["enseignants et l'administration"],
  },
];

const adminFeatures = [
  {
    text: "Tableaux de bord analytiques pour suivre les indicateurs de performance de l'établissement",
    strongParts: ["Tableaux de bord analytiques"],
  },
  {
    text: "Gestion des emplois du temps et attribution des salles avec détection automatique des conflits",
    strongParts: ["emplois du temps"],
  },
  {
    text: "Suivi financier et gestion des ressources humaines intégrés",
    strongParts: ["Suivi financier"],
  },
  {
    text: "Rapports statistiques et exports de données personnalisables pour les besoins administratifs",
    strongParts: ["exports de données"],
  },
];
---

<section class="py-16">
  <!-- Article 1: Enseignants -->
  <FeaturesDetailsArticle
    badgeTitle="Interface enseignants"
    title="Plateforme numérique pour professeurs"
    description="Une solution complète permettant aux enseignants d'optimiser leur temps et d'améliorer le suivi pédagogique des élèves au quotidien."
    features={teacherFeatures}
    imageSrc={interfaceEnseignantDesktop}
    imageAlt="Interface du logiciel EduXcoM pour la gestion des cours et évaluations par les enseignants"
    direction="left"
    reverse={true}
  />

  <!-- Article 2: Parents  -->

  <FeaturesDetailsArticle
    badgeTitle="Application mobile parents"
    title="Suivi scolaire pour les familles"
    description="Notre plateforme renforce le lien école-famille grâce à un accès instantané aux informations scolaires de vos enfants, où que vous soyez."
    features={parentFeatures}
    imageSrc={interfaceParentsMobile}
    imageAlt="Application mobile EduXcoM pour le suivi scolaire par les parents"
    direction="right"
    reverse={false}
  />

  <!-- Article 3: Administration -->
  <FeaturesDetailsArticle
    badgeTitle="Administration scolaire"
    title="Gestion complète d'établissement"
    description="Notre système d'information centralise toutes les données administratives et pédagogiques pour une gestion optimisée de votre établissement scolaire."
    features={adminFeatures}
    imageSrc={interfaceAdminTablet}
    imageAlt="Tableau de bord administratif du logiciel de gestion scolaire EduXcoM"
    direction="left"
    reverse={true}
  />
</section>
