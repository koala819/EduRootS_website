---
import '../styles/global.css';
import Head from '../components/Head.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
  title?: string;
}

const { title, ...props } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <Head {...props} />
    <script>
      // Initialiser le thème immédiatement pour éviter le flash
      const isDark =
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
      document.documentElement.classList.toggle('dark', isDark);
    </script>
  </head>
  <body
    class="bg-light dark:bg-dark text-dark dark:text-light p-4 rounded-md leading-relaxed overflow-x-hidden"
  >
    <Navbar />
    <slot />
    <script>
      // Script client pour gérer les changements de thème après chargement
      import { initTheme } from '../scripts/theme.js';
      document.addEventListener('DOMContentLoaded', initTheme);
    </script>
  </body>
</html>
